# Основные настройки
root = true

# Конфигурация для всех файлов
[*]
charset = utf-8                    # Кодировка: utf-8 / latin1
end_of_line = crlf                 # Символ конца строки: lf / crlf вроде на Windows рекомендуется crlf, на остальном lf
indent_style = space               # Стиль отступов: space / tab
indent_size = 2                    # Размер отступа: 2 / 4
tab_width = 4                      # Ширина табуляции: 2 / 4
trim_trailing_whitespace = true    # Удаление пробелов в конце строки: true / false
insert_final_newline = true        # Вставка пустой строки в конце файла: true / false
max_line_length = 100

# Конфигурация для TypeScript файлов
[*.tsx]
indent_style = space               # Стиль отступов: space / tab
indent_size = 2                    # Размер отступа: 2 / 4

# Конфигурация для TypeScript React файлов
[*.tsx]
indent_style = space               # Стиль отступов: space / tab
indent_size = 2                    # Размер отступа: 2 / 4

# Конфигурация для Markdown файлов
[*.md]
trim_trailing_whitespace = false   # Удаление пробелов в конце строки: true / false

# Конфигурация для JSON файлов
[*.json]
indent_style = space               # Стиль отступов: space / tab
indent_size = 2                    # Размер отступа: 2 / 4

# Конфигурация для файлов YAML
[*.yml]
indent_style = space               # Стиль отступов: space / tab
indent_size = 2                    # Размер отступа: 2 / 4